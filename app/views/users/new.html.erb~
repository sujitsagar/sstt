<h1>Register user</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :pasword %><br />
    <%= f.password_field :pasword %>
  </div>
  <div class="field">
    <%= f.label :pasword_confirmation %><br />
    <%= f.password_field :pasword_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

